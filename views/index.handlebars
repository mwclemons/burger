<div class="row">
    <div class="col-2"></div>
    <div class="col-8 text-center">
        <img src="/public/assets/img/burger.jpg">
    </div>
</div>

<div class="row text-center">
    <div class="col-12">
        <h1>Eat the Burgers!!!</h1>
    </div>
</div>

<div class="row text-center">
    <div class="col-2"></div>
    <div class="col-4">
        <h2>Burgers ready to be eaten!!</h2>

        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{burger_name}}
                <button class="devour" data-id="{{id}}" data-devour="{{devoured}}">
                DEVOUR IT!!
                </button>
            <br>
            {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-4">
        <h2>Devoured Burgers</h2>

        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{burger_name}}
            <br>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<div class="row text-center">
    <div class="col-12">
        <h2>Add a Burger</h2>
        <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>

        <button type="submit">Add Burger</button>
        </form>
    </div>
</div>




<h1>Burgers!</h1>

<h2>Burgers ready to be eaten!!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{burger_name}}
      	<button class="devour" data-id="{{id}}" data-devour="{{devoured}}">
		DEVOUR IT!!
	    </button>
      <br>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

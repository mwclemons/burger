<div class="jumbotron text-center">
  <h1 class="display-4">Eat the Burgers!!!</h1>
  <img src="/assets/img/burger.jpg" class="img-fluid rounded">

</div>

<div class="row">
    <div class="col-3"></div>
    <div class="col-3">
        <h2 class="text-center">Ready Burgers!!</h2>

        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{burger_name}}
                <button type="button" class="btn btn-danger devour" data-id="{{id}}" data-devour="{{devoured}}">
                DEVOUR IT!!
                </button>
            <br>
            {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-3">
        <h2 class="text-center">Devoured Burgers</h2>

        <ul class="text-right">
        {{#each burgers}}
            {{#if devoured}}
            {{burger_name}}
            <br>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<div class="row text-center">
    <div class="col-12">
        <h2>Add a Burger</h2>
        <form class="create-form">

        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
        </div>

        <button type="submit" class="btn btn-success">Add Burger</button>
        </form>
    </div>
</div>



